{% extends 'baseback.html.twig' %}

{% block body %}

<div class="container">
          <div class="page-inner">
            <div class="page-header">
              <h3 class="fw-bold mb-3">Listes des utilisateurs</h3>
              <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                  <a href="/back">
                    <i class="icon-home"></i>
                  </a>
                </li>
                <li class="separator">
                  <i class="icon-arrow-right"></i>
                </li>
              </ul>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table
                        id="basic-datatables"
                        class="display table table-striped table-hover"
                      >
                        <thead>
                          <tr>
                            <th>Nom d'utilisateur</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Mot de passe</th>
                            <th>date_naissance</th>
                            <th>adresse</th>
                            <th>role</th>
                            <th>genre</th>
                            <th>image</th>
                            <th><th>Action</th></th>
                          </tr>
                        </thead>
                        <tfoot>
                          <tr>
                            <th>Nom d'utilisateur</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Mot de passe</th>
                            <th>date_naissance</th>
                            <th>adresse</th>
                            <th>role</th>
                            <th>genre</th>
                            <th>image</th>
                            <th>Action</th>
                          </tr>
                        </tfoot>
                        <tbody>
                         {% for user in users %}
                            <tr>
                            {#   <td><img src="{{ asset(user.picture) }}" alt="{{ user.username }}" width="100"></td>#}
                           
                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.getPassword() }}</td>
                                <td>{{ user.getDateNaissance()|date('d/m/Y') }}</td>
                                <td>{{ user.adresse}}</td>
                                <td>{{ user.getRole().value }}</td>
                                <td>{{ user.genre}}</td>
                              <td><img src="{{ asset('utilisateur/img/' ~ user.image) }}" alt="User Image" width="100" height="100"> </td>                               
                              <td><a href="{{ path('edit_user', { id: user.id }) }}" class="btn btn-warning">Modifier</a> </td>
                               <td> <a href="#" class="btn btn-danger alert_delete" data-id="{{ user.id }}">
                                    Supprimer
                                </a></td>
                            </tr>
                        {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

{% endblock %}