{% extends 'baseback.html.twig' %}

{% block body %}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Listes des articles</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="/back">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Titre</th>
                                        <th>Contenu</th>
                                        <th>Auteur</th>
                                        <th>Date de publication</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Titre</th>
                                        <th>Contenu</th>
                                        <th>Auteur</th>
                                        <th>Date de publication</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    {% for article in articles %}
                                        <tr>
                                            <td>{{ article.titre }}</td>
                                            <td>{{ article.contenue }}</td>
                                            <td>{{ article.utilisateur.nom }}</td>
                                            <td>{{ article.datearticle|date('d/m/Y') }}</td>
                                            <td><img src="{{ asset(article.urlimagearticle) }}" alt="Article Image" width="100" height="100"></td>
                                            <td>
                                                <a href="{{ path('article_edit', { id: article.id }) }}" class="btn btn-warning">Modifier</a>
                                                <a href="{{ path('article_delete', { id: article.id }) }}" class="btn btn-danger">Supprimer</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}