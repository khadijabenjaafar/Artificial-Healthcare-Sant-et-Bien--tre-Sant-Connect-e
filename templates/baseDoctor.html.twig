                            <li><a href="#articles" data-target="articles">Mes Articles</a></li>
                            <li><a href="/logout" class="logout">Se Déconnecter</a></li>
                        {% endif %}
                    </ul>
                </nav>
            </aside>

            <!-- Main Content -->
            <div class="content">
                {% block body %}

                {% endblock %}
            </div>
        </div>
    </body>
</html>