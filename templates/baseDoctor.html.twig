<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/sidebar.css') }}">
        <style>
        
            body {
                background-color:rgb(255, 255, 255);
                color: rgb(255, 255, 255);
                margin: 0;
                display: flex;
                height: 100vh;
                overflow: hidden;
            }
            .dashboard {
                display: flex;
                width: 100%;
                height: 100%;
            }
            .sidebar12{
                width: 250px;
                flex-shrink: 0;
                height: 100vh;
                background-color: #1ca7a2;
                color: white;
                padding: 20px;
                overflow-y: auto;
                position: fixed;
                top: 0;
                left: 0;
            }
            .content {
                flex-grow: 1;
                margin-left: 150px;
                padding: 20px;
                overflow-y: auto;
                height: 100vh;
                background-color:white;
                color: #000;
            }
            .hidden {
                display: none;
            }
            .sidebar12 a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }
            .sidebar12 a:hover {
                background-color: #ffc107;
                color: #000;
            }
           .table123 {
                width: 100%;
                border-collapse: collapse;
                color: rgb(0, 64, 84);
                font-family: Arial, sans-serif;
                text-align: left;
                background-color: #f8f9fa; /* Couleur de fond */
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Effet d'ombre */
            }

            .table123 thead {
                background-color: #1ca7a2; /* Gris foncé élégant */
                color: white;
            }

            .table123 th, 
            .table123 td {
                padding: 12px 15px;
                border-bottom: 1px solid #dee2e6;
            }

            .table123 tbody tr:hover {
                background-color: #e9ecef; /* Effet survol */
            }

            .sidebar12-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                            background-color: #1ca7a2;

            margin-bottom: 20px;
            }

            .sidebar12-header h2 {
                margin-right: 15px;
                white-space: nowrap;
                overflow: hidden;
            }
            .profile-icon {
                width: 50px;
                height: 50px;
                object-fit: cover;
                border-radius: 50%;
                margin-left: 10px;
            }
        </style>
        {% endblock %}

        {% block javascripts %}
        <script src="{{ asset('js/sidebar.js') }}"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const menuItems = document.querySelectorAll("nav a[data-target]");
                const sections = document.querySelectorAll(".section");
                
                sections.forEach(section => section.classList.add("hidden"));
                
                menuItems.forEach(item => {
                    item.addEventListener("click", function (e) {
                        e.preventDefault();
                        sections.forEach(section => section.classList.add("hidden"));
                        
                        const target = document.getElementById(item.getAttribute("data-target"));
                        if (target) {
                            target.classList.remove("hidden");
                        }
                    });
                });
            });
        </script>
        {% endblock %}
    </head>
    <body>
        <div class="dashboard">
            <!-- Sidebar -->
            <aside class="sidebar12 p-3">
                <div class="sidebar-header">
                    <h2>{{ app.user.nom }}</h2>
                    {% if app.user and app.user.image %}
                        <a href="{{ path('profile_user') }}">
                            <img src="{{ asset('utilisateur/img/' ~ app.user.image) }}" alt="Photo de profil" class="profile-icon">
                        </a>
                    {% else %}
                        <a href="{{ path('profile_user') }}">
                            <i class="bi bi-person-circle profile-icon"></i>
                        </a>
                    {% endif %}
                </div>
                <nav>
                    <ul class="list-unstyled">
