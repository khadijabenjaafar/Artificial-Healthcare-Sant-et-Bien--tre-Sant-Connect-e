{% extends 'base.html.twig' %}

{% block body %}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier un compte</title>
</head>
<body>

<br>
<br>
<br>
<div class="container mt-4">
        <div class="card p-4 shadow-sm">
           <h2 class="text-primary text-center mb-4">Modifier mon compte </h2>
        
{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
<div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prenom) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresse) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.ancien_mot_de_passe, {'attr': { 'class': 'form-control'}}) }}
                {{ form_widget(form.mot_de_passe, {'attr': { 'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.date_naissance, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date_naissance) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 mb-3">
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
{{ form_end(form) }}
    </div>
</div>
</body>
<br>
<br>
<br>
</html>
{% endblock %}