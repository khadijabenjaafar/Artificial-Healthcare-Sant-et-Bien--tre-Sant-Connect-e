{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Modifier l'article</h4>
                </div>
                <div class="card-body" >
                    
                    {% if article.urlimagearticle %}
                        <div class="text-center mb-3">
                            <img src="{{ asset(article.urlimagearticle) }}" class="img-thumbnail rounded" style="max-width: 300px;" alt="Image actuelle">
                            <p class="text-muted mt-2">Image actuelle de l'article</p>
                        </div>
                    {% endif %}
                    
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.titre, 'Titre de l\'article', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control w-100','rows':'6'}}) }}


                             {% if form.titre.vars.errors is not empty %}
                             <div class="text-danger mt-1"> {{ form_errors(form.titre) }} </div>
                             {% endif %}


                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Contenue</label>
                            {{ form_widget(form.contenue, {'attr': {'class': 'form-control', 'rows': 5}}) }}

                            {% if form.contenue.vars.errors is not empty %}
                             <div class="text-danger mt-1"> {{ form_errors(form.contenue) }} </div>
                             {% endif %}


                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Changer l'image</label>
                            {{ form_widget(form.urlimagearticle, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-muted">Laissez vide pour conserver l'image actuelle.</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('doctor_index') }}" class="btn btn-secondary">Annuler</a>
                           
                           <button type="submit" class="btn btn-primary">Mettre Ã  jour</button>
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}