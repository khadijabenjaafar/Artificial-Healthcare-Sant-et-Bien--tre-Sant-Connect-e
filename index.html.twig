        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            const table = document.getElementById("planificationsTable");
            const tbody = table.querySelector("tbody");

            tbody.innerHTML = ""; // Clear old data
            data.forEach(planif => {
                const row = `<tr>
