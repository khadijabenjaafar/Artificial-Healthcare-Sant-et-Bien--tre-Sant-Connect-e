    <script>
      document.addEventListener("DOMContentLoaded", function () {
    let chatBox = document.getElementById("chat-container");
    let openChatButton = document.getElementById("open-chat");
    let messageList = document.getElementById("message-list");

    // Masquer la boîte de chat au chargement
    chatBox.style.display = "none";

    // Afficher la boîte de chat au clic sur "Envoyer un message"
    openChatButton.addEventListener("click", function () {
        chatBox.style.display = "flex";
    });

    // Afficher la boîte de chat lorsqu'on clique sur un message reçu
    messageList.addEventListener("click", function (event) {
        let clickedMessage = event.target.closest(".message-item");
        if (clickedMessage) {
            chatBox.style.display = "flex";
        }
    });
});

        let selectedUserId = null;
   
          // Charger la liste des utilisateurs
        function loadUsers() {
            fetch('/chat/users')
                .then(response => response.json())
                .then(users => {
                    const userList = document.getElementById('user-list');
                    userList.innerHTML = "<h4>Contacts</h4>";
   
                    users.forEach(user => {
                        let userDiv = document.createElement('div');
                        userDiv.innerHTML = `<img src="${user.avatar}" alt="Avatar" style="width:40px; height:40px; border-radius:50%; margin-right:10px;"> ${user.name}`;
                        userDiv.onclick = () => selectUser(user.id, user.name);
                        userList.appendChild(userDiv);
                    });
                   
                })
                .catch(error => console.error("Erreur chargement utilisateurs :", error));
        }
   
       
   
        // Sélectionner un utilisateur
        function selectUser(userId, userName) {
            selectedUserId = userId;
            document.getElementById('chat-title').textContent = "Chat avec " + userName;
            loadMessages();
        }
     // Charger les messages
function loadMessages() {
    if (!selectedUserId) return;

    fetch(`/chat/messages/${selectedUserId}`)
        .then(response => response.json())
        .then(messages => {
            console.log("Messages reçus :", messages); // 🔍 Debug
            const chatBox = document.getElementById('chat-box');
            chatBox.innerHTML = ""; // Effacer l'ancien contenu du chat

            if (!messages || messages.length === 0) {
                chatBox.innerHTML = "<p>Aucun message.</p>";
                return;
            }

            messages.forEach(msg => {
                let messageDiv = document.createElement("div");
                let messageClass = (msg.senderId === selectedUserId) ? "receiver" : "sender";
                messageDiv.classList.add("message", messageClass);

                // Formatage du message
                messageDiv.innerHTML = `
                    <strong>${msg.senderName}:</strong> ${msg.content}
                    <span class="time">${msg.time}</span>
                `;
               
                chatBox.appendChild(messageDiv);
            });

            // Auto-scroll en bas du chat
            chatBox.scrollTop = chatBox.scrollHeight;
        })
        .catch(error => console.error("Erreur lors du chargement des messages:", error));
}

// Envoyer un message
document.getElementById("send-btn").addEventListener("click", function () {
    if (!selectedUserId) {
        alert("Veuillez sélectionner un utilisateur !");
        return;
    }

    const messageInput = document.getElementById("chat-input");
    const messageContent = messageInput.value.trim();
    if (messageContent === "") return;

    fetch("/chat/send", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ receiverId: selectedUserId, content: messageContent })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            messageInput.value = ""; // Effacer le champ de saisie après envoi
            setTimeout(loadMessages, 500); // Recharger les messages après envoi
        } else {
            alert("Erreur lors de l'envoi !");
        }
    })
    .catch(error => console.error("Erreur lors de l'envoi du message:", error));
});

        // Charger les messages récents
        function loadLatestMessages() {
            fetch('/chat/latest-messages')
                .then(response => response.json())
                .then(data => {
                    const messageList = document.getElementById('message-list');
                    const messageCount = document.getElementById('message-count');
   
                    messageList.innerHTML = "";
                    messageCount.textContent = data.length;
   
                    data.forEach(message => {
                        messageList.innerHTML += `
                            <a href="javascript:void(0);" onclick="selectUser(${message.senderId}, '${message.senderName}')">
                                <div class="notif-img">
                                    <img src="${message.senderImage}" alt="Profile">
                                </div>
                                <div class="notif-content">
                                    <span class="subject">${message.senderName}</span>
                                    <span class="block">${message.content}</span>
                                    <span class="time">${message.time}</span>
                                </div>
                            </a>
                        `;
                    });
                })
                .catch(error => console.error("Erreur chargement messages :", error));
        }
   
        setInterval(loadMessages, 10000);
        setInterval(loadLatestMessages, 5000);
        loadUsers();
        loadLatestMessages();

    </script>

