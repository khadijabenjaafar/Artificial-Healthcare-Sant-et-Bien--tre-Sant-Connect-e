
{% block title %}Statistiques Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">üìä Tableau de Bord - Statistiques</h1>

    <div class="row mt-4">
        <!-- üîπ Nombre total d'articles -->
        <div class="col-md-4">
            <div class="card bg-primary text-white text-center p-3">
                <h3>üìù Total Articles</h3>
                <p class="fs-3">{{ totalArticles }}</p>
            </div>
        </div>

        <!-- üîπ Nombre total de commentaires -->
        <div class="col-md-4">
            <div class="card bg-success text-white text-center p-3">
                <h3>üí¨ Total Commentaires</h3>
                <p class="fs-3">{{ totalCommentaires }}</p>
            </div>
        </div>

        <!-- üîπ Nombre total de signalements -->
        <div class="col-md-4">
            <div class="card bg-danger text-white text-center p-3">
                <h3>üö® Total Signalements</h3>
                <p class="fs-3">{{ totalSignalements }}</p>
            </div>
        </div>
    </div>

    <!-- üî• Top 5 Articles les Plus Vus -->
    <div class="mt-5">
        <h2>üî• Articles les Plus Vus</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Nombre de Vues</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articlesLesPlusVus %}
                    <tr>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.nbreVue }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- ‚≠ê Top 5 Articles les Mieux Not√©s -->
    <div class="mt-5">
        <h2>‚≠ê Articles les Mieux Not√©s</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Note Moyenne</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articlesLesMieuxNotes %}
                    <tr>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.getAverageRating() }}/10</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- ‚ù§Ô∏è Top 5 Commentaires les Plus Aim√©s -->
    <div class="mt-5">
        <h2>‚ù§Ô∏è Commentaires les Plus Aim√©s</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Contenu</th>
                    <th>J'aime</th>
                </tr>
            </thead>
            <tbody>
                {% for commentaire in commentairesLesPlusAimes %}
                    <tr>
                        <td>{{ commentaire.contenue }}</td>
                        <td>{{ commentaire.likes }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}